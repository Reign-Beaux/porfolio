---
import Footer from "./footer/Footer.astro";
import Header from "./header/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <title aria-label="Título de la página">{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  * {
    color: white;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
  html {
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    background-color: #1f2026;
  }

  /* Para navegadores webkit como Chrome y Safari */
  ::-webkit-scrollbar {
    width: 10px; /* Ancho del scrollbar */
  }

  ::-webkit-scrollbar-track {
    background: #f1f1f1; /* Color del fondo del scrollbar */
  }

  ::-webkit-scrollbar-thumb {
    background: #888; /* Color del thumb (la barra deslizante) */
  }

  /* Para navegadores Firefox */
  scrollbar {
    width: 10px; /* Ancho del scrollbar */
  }

  scrollbar-track {
    background: #f1f1f1; /* Color del fondo del scrollbar */
  }

  scrollbar-thumb {
    background: #888; /* Color del thumb (la barra deslizante) */
  }
  
  @media screen and (min-width: 0) and (max-width: 700px) {
    html {
      width: 150%;
    }
  }

</style>
